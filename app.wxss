@import 'assets/style/weui.wxss';

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-family: '微软雅黑', Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', Arial, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 0px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

/*自定义公共样式*/

.text_center {
  text-align: center;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/*分隔线*/
.splitline-1 {
    height: 1px;
    background: #ddd;
    margin: 10px 0;
}

/*按钮颜色*/
button[type="default"].btn-style1 {
    background-color: #FFEE2F;
    color: #2E2E26;
    border-radius:0;
    padding:0 2.34em; 
}

button[type="default"].btn-style2 {
    background-color: #1C1B20;
    color: #fff;
    border-radius:0;
    padding:0 2.34em;
}

/*背景颜色*/
.bgC-FFEE2F {background-color: #FFEE2F;}
.bgC-white {background-color:#fff;}
/*文字颜色*/
.color-ffb400 {color:#FFB400}

/*文本对齐方式*/
.text-left {text-align: left;}
.text-center {text-align: center;}
.text-right {text-align: right;}

/*对齐方式*/
.pull-left {float:left;}
.pull-right {float:right;}

/*通用字体大小*/
.font-12 {font-size:12px;}
.font-14 {font-size:14px;}
.font-16 {font-size:16px;}

/*定位模块通用样式*/
.stickUp {position:fixed;bottom:16px;right:5px;width:80px;height:80px;z-index:99;}
.stickUp image {width: 100%;height: 100%;display: block;}

/*单行省略*/

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/*多行省略*/

.ellipsis-2 {
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/*清除padding*/
.pt-0 {padding-top:0;}
.pb-0 {padding-bottom:0;}

/*清除margin*/
.mt-0 {margin-top:0;}

/*清除圆角*/
.clear-radius {border-radius: 0;}


